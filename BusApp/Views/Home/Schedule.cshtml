@model List<TripModel>
<head>
    <title>Bus App</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/site.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<style>
    body{
    background: url("bus.jpg")no-repeat;
    background-size: cover;
    }
</style>
<body>

<h2>Список рейсов</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Место отправления</th>
                <th>Место прибытия</th>
                <th>Дата отправления</th>
                <th>Время отправления</th>
                <th>Время прибытия</th>
                <th>Тип автобуса</th>
                <th>Идентификатор автобуса</th>
                <th>Доступные места</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td>@trip.TravelInfo.FromLocation</td>
                    <td>@trip.TravelInfo.ToLocation</td>
                    <td>@trip.TravelInfo.TravelDate.ToShortDateString()</td>
                    <td>@trip.DepartureTime.ToShortTimeString()</td>
                    <td>@trip.ArrivalTime.ToShortTimeString()</td>
                    <td>@trip.TravelInfo.BusType</td>
                    <td>@trip.BusId</td>
                    <td>@trip.AvailableSeats</td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>