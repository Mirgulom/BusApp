@model TravelFormModel

<!DOCTYPE html>
<head>
    <title>Bus App</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/site.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<style>
    body{
    background: url("bus.jpg") no-repeat;
    background-size: cover;
    }
    .form {
    width: 40%;
    background: #f5f5f5;
    border-radius: 10px;
    padding: 30px;
    }
    .form-h3{
    color: #1e2125;
    text-align: center;
    }
    .submit-btn{
    margin-top: 20px;
    }
</style>
<body>


@using (Html.BeginForm())
{
    <div class="form">
        <h3 class="form-h3">Выбор автобуса</h3>
        <div >
            <label for="FromLocation">Откуда:</label>
            <select asp-for="FromLocation" class="form-control">
                <!-- выбора места отправления -->
                    <option value="Samarkand">Самарканд</option>
                    <option value="Tashkent">Ташкент</option>
                    <option value="Buxara">Бухара</option>
                    <option value="Namangan">Наманган</option>
                    <option value="Xiva">Хива</option>
                    <option value="Shaxrisabz">Шахрисабз</option>
            </select>
        </div>

        <div>
            <label for="ToLocation">Куда:</label>
            <select asp-for="ToLocation" class="form-control">
                <!-- выбора места назначения -->
                <option value="Tashkent">Ташкент</option>
                <option value="Samarkand">Самарканд</option>
                <option value="Buxara">Бухара</option>
                <option value="Namangan">Наманган</option>
                <option value="Xiva">Хива</option>
                <option value="Shaxrisabz">Шахрисабз</option>
            </select>
        </div>

        <div>
            <label for="TravelDate">Дата путешествия:</label>
            <input asp-for="TravelDate" type="date" class="form-control"/>
        </div>

        <div>
            <label for="BusType">Тип автобуса:</label>
            <select asp-for="BusType" class="form-control">
                <option value="Economy">Эконом</option>
                <option value="Luxury">Люкс</option>
            </select>
        </div>

        <div class="submit-btn">
            <button type="submit" class="btn btn-primary align-content-center">Поиск автобуса</button>
        </div>
    </div>
    
}
</body>
